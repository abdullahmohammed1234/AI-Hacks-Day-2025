            <div class="form-group">
              <label for="email" class="form-label"
                >Email<span class="required">*</span></label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                autofocus
                class="form-input"
                placeholder="Enter your email"
              />
            </div>
