<% var userSharedItems = typeof userSharedItems !== 'undefined' ? userSharedItems : []; %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Community - Track2Save</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <%- include('partials/header', { user: user, currentPage: currentPage || 'community' }) %>

  <main class="container" style="padding: 5.5rem 1rem 2rem; max-width: 1200px; margin: 0 auto;">

    <!-- Page Header -->
    <section class="page-header" style="margin-bottom: 2rem;">
      <h1>üåç Community Food Sharing</h1>
      <p style="color: #666; margin-top: 0.5rem;">Share your excess food with your community and reduce waste together</p>
    </section>

    <!-- Search Bar -->
    <section class="search-section" style="margin-bottom: 2rem;">
      <form method="GET" action="/community" style="display: flex; gap: 1rem; max-width: 600px;">
        <input
          type="text"
          name="search"
          placeholder="Search for food items..."
          value="<%= searchQuery || '' %>"
          style="flex: 1; padding: 0.75rem 1rem; border: 1px solid #d1d5db; border-radius: 8px; font-size: 1rem;"
        >
        <button type="submit" class="btn btn-primary">Search</button>
        <% if (searchQuery) { %>
          <a href="/community" class="btn btn-secondary">Clear</a>
        <% } %>
      </form>
    </section>

    <!-- Available Shared Items -->
    <section class="card" style="margin-bottom: 2rem;">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
        <h2 style="margin: 0;">Available Items (<%= sharedItems.length %>)</h2>
        <span class="badge badge-success"><%= sharedItems.length %> items available</span>
      </div>

      <% if (sharedItems.length === 0) { %>
        <div style="text-align: center; padding: 3rem; color: #9ca3af;">
          <p style="font-size: 3rem; margin: 0;">üîç</p>
          <p style="margin: 1rem 0 0 0;">
            <%= searchQuery ? 'No items match your search.' : 'No shared items available right now.' %>
          </p>
          <% if (!searchQuery) { %>
            <p style="margin: 0.5rem 0 0 0; font-size: 0.875rem;">Be the first to share!</p>
          <% } %>
        </div>
      <% } else { %>
        <div class="shared-items-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 1.5rem;">
          <% sharedItems.forEach(item => {
            const daysUntil = Math.ceil((new Date(item.foodItem.expiryDate) - new Date()) / (1000 * 60 * 60 * 24));
          %>
            <div class="shared-item-card" style="background: white; border: 1px solid #e5e7eb; border-radius: 12px; padding: 1.5rem; transition: transform 0.2s, box-shadow 0.2s;">
              <!-- Item Header -->
              <div style="display: flex; align-items: start; gap: 1rem; margin-bottom: 1rem;">
                <span style="font-size: 2.5rem;"><%= item.foodItem.categoryIcon %></span>
                <div style="flex: 1;">
                  <h3 style="margin: 0; color: #1f2937;"><%= item.foodItem.name %></h3>
                  <p style="margin: 0.25rem 0 0 0; color: #6b7280; font-size: 0.875rem;">
                    <%= item.foodItem.quantity %> <%= item.foodItem.unit %> ‚Ä¢ <%= item.foodItem.category %>
                  </p>
                </div>
              </div>

              <!-- Expiry Badge -->
              <div style="margin-bottom: 1rem;">
                <span class="badge badge-<%= daysUntil <= 1 ? 'critical' : daysUntil <= 3 ? 'warning' : 'success' %>">
                  Expires: <%= daysUntil <= 0 ? 'Today' : daysUntil === 1 ? 'Tomorrow' : 'in ' + daysUntil + ' days' %>
                </span>
              </div>

              <!-- Donor Info -->
              <div style="background: #f9fafb; padding: 1rem; border-radius: 8px; margin-bottom: 1rem;">
                <p style="margin: 0; color: #6b7280; font-size: 0.875rem; display: flex; align-items: center; gap: 0.5rem;">
                  <span>üë§</span>
                  <span>Shared by <strong><%= item.donor.username %></strong></span>
                </p>
                <p style="margin: 0.5rem 0 0 0; color: #6b7280; font-size: 0.875rem; display: flex; align-items: center; gap: 0.5rem;">
                  <span>üìç</span>
                  <span><%= item.pickupLocation %></span>
                </p>
                <% if (item.notes) { %>
                  <p style="margin: 0.5rem 0 0 0; color: #6b7280; font-size: 0.875rem; display: flex; align-items: center; gap: 0.5rem;">
                    <span>üìù</span>
                    <span><%= item.notes %></span>
                  </p>
                <% } %>
              </div>

              <!-- Claim Button -->
              <form method="POST" action="/api/community/claim/<%= item._id %>" style="margin: 0;">
                <button type="submit" class="btn btn-primary" style="width: 100%;">
                  Claim This Item
                </button>
              </form>
            </div>
          <% }); %>
        </div>
      <% } %>
    </section>

    <!-- My Shared Items -->
    <section class="card" style="margin-bottom: 2rem;">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
        <h2 style="margin: 0;">My Shared Items (<%= userSharedItems.length %>)</h2>
        <a href="/donate" class="btn btn-primary">+ Share New Item</a>
      </div>

      <% if (userSharedItems.length === 0) { %>
        <div style="text-align: center; padding: 2rem; background: #f9fafb; border-radius: 8px;">
          <p style="font-size: 2rem; margin: 0;">üì¶</p>
          <p style="margin: 1rem 0 0 0; color: #6b7280;">You haven't shared any items yet</p>
          <a href="/donate" class="btn btn-primary" style="margin-top: 1rem;">Share Your First Item</a>
        </div>
      <% } else { %>
        <div style="display: grid; gap: 1rem;">
          <% userSharedItems.forEach(item => { %>
            <div style="background: #f9fafb; border: 1px solid #e5e7eb; border-radius: 8px; padding: 1rem; display: flex; justify-content: space-between; align-items: center;">
              <div style="display: flex; align-items: center; gap: 1rem; flex: 1;">
                <span style="font-size: 1.5rem;"><%= item.categoryIcon %></span>
                <div>
                  <h4 style="margin: 0;"><%= item.name %></h4>
                  <p style="margin: 0.25rem 0 0 0; color: #6b7280; font-size: 0.875rem;">
                    <%= item.quantity %> <%= item.unit %> ‚Ä¢ <%= item.pickupLocation %>
                  </p>
                </div>
              </div>
              <div style="display: flex; align-items: center; gap: 0.75rem;">
                <span class="badge badge-<%= item.status === 'available' ? 'success' : item.status === 'claimed' ? 'warning' : 'info' %>">
                  <%= item.status %>
                </span>
                <% if (item.status === 'available') { %>
                  <form method="POST" action="/api/community/shared/<%= item._id %>?_method=DELETE" style="margin: 0;">
                    <button type="submit" class="btn btn-sm btn-secondary" onclick="return confirm('Remove this shared item?')">Remove</button>
                  </form>
                <% } %>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </section>

    <!-- Impact Stats -->
    <section class="card" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white;">
      <h2 style="margin: 0 0 1.5rem 0; color: white;">üå± Your Community Impact</h2>

      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem;">
        <div style="background: rgba(255, 255, 255, 0.1); padding: 1.5rem; border-radius: 8px; backdrop-filter: blur(10px);">
          <p style="margin: 0; font-size: 0.875rem; opacity: 0.9;">Items Shared</p>
          <p style="margin: 0.5rem 0 0 0; font-size: 2rem; font-weight: 600;"><%= userImpact.itemsShared %></p>
        </div>

        <div style="background: rgba(255, 255, 255, 0.1); padding: 1.5rem; border-radius: 8px; backdrop-filter: blur(10px);">
          <p style="margin: 0; font-size: 0.875rem; opacity: 0.9;">CO2 Saved</p>
          <p style="margin: 0.5rem 0 0 0; font-size: 2rem; font-weight: 600;"><%= Math.round(userImpact.co2SavedKg * 10) / 10 %> kg</p>
        </div>

        <div style="background: rgba(255, 255, 255, 0.1); padding: 1.5rem; border-radius: 8px; backdrop-filter: blur(10px);">
          <p style="margin: 0; font-size: 0.875rem; opacity: 0.9;">Water Saved</p>
          <p style="margin: 0.5rem 0 0 0; font-size: 2rem; font-weight: 600;"><%= Math.round(userImpact.waterSavedLiters).toLocaleString() %> L</p>
        </div>

        <div style="background: rgba(255, 255, 255, 0.1); padding: 1.5rem; border-radius: 8px; backdrop-filter: blur(10px);">
          <p style="margin: 0; font-size: 0.875rem; opacity: 0.9;">Value Saved</p>
          <p style="margin: 0.5rem 0 0 0; font-size: 2rem; font-weight: 600;">$<%= Math.round(userImpact.moneySavedDollars * 100) / 100 %></p>
        </div>
      </div>

      <p style="margin: 2rem 0 0 0; text-align: center; opacity: 0.9;">
        Together, we're making a difference in our community! üåç
      </p>
    </section>

    <!-- How It Works -->
    <section style="margin: 3rem 0; text-align: center;">
      <h2 style="margin-bottom: 2rem;">How Community Sharing Works</h2>
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem;">
        <div>
          <div style="background: linear-gradient(135deg, #10b981 0%, #f59e0b 100%); width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 1.5rem; margin: 0 auto 1rem;">1</div>
          <h3>Share Food</h3>
          <p style="color: #6b7280;">List items you won't use before they expire</p>
        </div>
        <div>
          <div style="background: linear-gradient(135deg, #10b981 0%, #f59e0b 100%); width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 1.5rem; margin: 0 auto 1rem;">2</div>
          <h3>Browse & Claim</h3>
          <p style="color: #6b7280;">Find items nearby and claim what you need</p>
        </div>
        <div>
          <div style="background: linear-gradient(135deg, #10b981 0%, #f59e0b 100%); width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 1.5rem; margin: 0 auto 1rem;">3</div>
          <h3>Make Impact</h3>
          <p style="color: #6b7280;">Reduce waste and help the environment</p>
        </div>
      </div>
    </section>

  </main>

  <%- include('partials/footer') %>

  <style>
    /* Ensure main content clears fixed header on all viewports */
    @media (max-width: 480px) {
      main.container { padding-top: 4.25rem !important; }
    }
    @media (min-width: 481px) and (max-width: 1024px) {
      main.container { padding-top: 4.75rem !important; }
    }
    @media (min-width: 1025px) {
      main.container { padding-top: 5.5rem !important; }
    }

    .shared-item-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
  </style>
</body>
</html>
